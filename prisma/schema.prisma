enum Categories {
  frontend
  backend
  problem_solving @map("problem solving")
  ai_ml           @map("ai/ml")
  mobile_dev      @map("mobile dev")
}

enum difficulties {
  easy
  medium
  hard
  expert
}

//todo if you have any idea for more titles add it
enum tilteType {
  master_of_Code @map("master of code")
  the_debuger    @map("the debuger")
}

enum accountType {
  standard
  google
  github
}

//!!this is just initial scheme so use (db push) not migrate 
model User {
  id          String      @id @default(cuid())
  accountId   String      @unique
  accountType accountType @default(standard)
  name        String?
  username    String?     @unique
  email       String      @unique
  bio         String?
  title       tilteType?
  image       String? // avatar url
  totalPoints Int?        @default(0)
  isVerified  Boolean?    @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  posts     Post[]    @relation("UserPosts")
  comments  Comment[] @relation("UserComments")
  likes     Like[]    @relation("UserLikes")
  saves     Save[]    @relation("UserSaves")
  followers Follow[]  @relation("FollowingTo")
  following Follow[]  @relation("FollowingFrom")

  // error/solution contributions 
  errors    ErrorReport[] @relation("UserErrors")
  solutions Solution[]    @relation("UserSolutions")

  @@index([email])
  @@index([username])
  @@index([createdAt])
}

model Post {
  id            String   @id @default(cuid())
  authorId      String
  caption       String?
  content       String? // long text, body, or markdown
  mediaUrl      String? // single media url; change to a separate model if you need many
  likesCount    Int      @default(0)
  commentsCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  author   User      @relation("UserPosts", fields: [authorId], references: [id])
  comments Comment[] @relation("PostComments")
  likes    Like[]    @relation("PostLikes")
  saves    Save[]    @relation("PostSaves")
}

model Comment {
  id       String @id @default(cuid())
  postId   String
  authorId String

  content    String
  likesCount Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  post   Post @relation("PostComments", fields: [postId], references: [id])
  author User @relation("UserComments", fields: [authorId], references: [id])
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String? // like on a post OR:
  createdAt DateTime @default(now())

  user User  @relation("UserLikes", fields: [userId], references: [id])
  post Post? @relation("PostLikes", fields: [postId], references: [id])

  @@index([userId])
  @@index([postId])
}

model Save {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user User @relation("UserSaves", fields: [userId], references: [id])
  post Post @relation("PostSaves", fields: [postId], references: [id])

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String // who follows
  followingId String // who is followed
  createdAt   DateTime @default(now())

  follower  User @relation("FollowingFrom", fields: [followerId], references: [id])
  following User @relation("FollowingTo", fields: [followingId], references: [id])

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model ErrorReport {
  id                 String        @id @default(cuid())
  authorId           String
  title              String
  description        String?
  code               String? // code snippet
  points             Int           @default(0) // Points awarded to solver based on difficulty
  category           Categories?
  difficulty         difficulties?
  isSolved           Boolean       @default(false)
  acceptedSolutionId String? // Track the accepted/best solution
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  author    User       @relation("UserErrors", fields: [authorId], references: [id], onDelete: Cascade)
  solutions Solution[] @relation("ErrorSolutions")

  @@index([authorId])
  @@index([difficulty])
  @@index([isSolved])
  @@index([createdAt])
}

model Solution {
  id           String   @id @default(cuid())
  errorId      String
  authorId     String
  content      String
  isApproved   Boolean  @default(false) // Marked as best solution by error author
  rate         Float    @default(0) // Rating calculated by algorithm (0-5 stars)
  earnedPoints Int      @default(0) // Actual points earned (error.points * rate multiplier)
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

  error  ErrorReport @relation("ErrorSolutions", fields: [errorId], references: [id], onDelete: Cascade)
  author User        @relation("UserSolutions", fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([errorId, authorId]) // One solution per error per user
  @@index([errorId])
  @@index([authorId])
  @@index([isApproved])
  @@index([createdAt])
}
